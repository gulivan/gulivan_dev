---
import type { Locale } from '../lib/i18n';
import { formatDate } from '../lib/i18n';
import { getBaseSlug, localizedPath } from '../lib/locale';

interface Props {
  title: string;
  pubDate: Date;
  description: string;
  tags?: string[];
  image?: { src: string; alt: string };
  slug: string;
  locale?: Locale;
}

const { title, pubDate, description, tags, image, slug, locale = 'en' } = Astro.props;
const formattedDate = formatDate(pubDate, locale);
const baseSlug = getBaseSlug(slug);
const href = localizedPath(`/blog/${baseSlug}/`, locale);
---

<a href={href} class="block group">
  <article class="border-t border-b py-4">
    <div class={`grid gap-x-4 ${image ? 'grid-cols-[auto_1fr]' : 'grid-cols-1'}`}>
      {image && (
        <div class="row-span-2">
          <img
            src={image.src}
            alt={image.alt}
            class="w-24 h-24 rounded-md object-cover"
            loading="lazy"
          />
        </div>
      )}
      <div class="min-w-0">
        <h2 class="text-xl font-semibold tracking-tight group-hover:underline">
          {title}
        </h2>
        <p class="mt-1 text-muted-foreground text-sm line-clamp-3">{description}</p>
        {tags && tags.length > 0 && (
          <div class="flex gap-1.5 flex-wrap mt-2">
            {tags.map((tag) => (
              <span class="inline-flex items-center rounded-md border px-2.5 py-0.5 text-xs font-semibold text-secondary-foreground bg-secondary">
                {tag}
              </span>
            ))}
          </div>
        )}
      </div>
      <div class={`flex items-end justify-end ${image ? '' : 'col-start-1'}`}>
        <time class="text-sm text-muted-foreground" datetime={pubDate.toISOString()}>
          {formattedDate}
        </time>
      </div>
    </div>
  </article>
</a>

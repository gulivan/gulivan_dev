---
import type { Locale } from '../lib/i18n';
import { formatDate } from '../lib/i18n';
import { getBaseSlug, localizedPath } from '../lib/locale';

interface Props {
  title: string;
  pubDate: Date;
  description: string;
  tags?: string[];
  image?: { src: string; alt: string };
  slug: string;
  locale?: Locale;
}

const { title, pubDate, description, tags, image, slug, locale = 'en' } = Astro.props;
const formattedDate = formatDate(pubDate, locale);
const baseSlug = getBaseSlug(slug);
const href = localizedPath(`/blog/${baseSlug}/`, locale);
---

<a href={href} class="block group">
  <article class="border-t border-b py-4">
    <div class="flex gap-4">
      {image && (
        <img
          src={image.src}
          alt={image.alt}
          class="w-24 h-24 rounded-md object-cover flex-shrink-0"
          loading="lazy"
        />
      )}
      <div class="min-w-0 flex-1">
        <div class="flex items-center justify-between gap-4">
          <div class="flex items-center gap-2 min-w-0">
            <h2 class="text-xl font-semibold tracking-tight group-hover:underline truncate">
              {title}
            </h2>
            {tags && tags.length > 0 && (
              <div class="flex gap-1.5 flex-shrink-0">
                {tags.map((tag) => (
                  <span class="inline-flex items-center rounded-md border px-2.5 py-0.5 text-xs font-semibold text-secondary-foreground bg-secondary">
                    {tag}
                  </span>
                ))}
              </div>
            )}
          </div>
          <time class="text-sm text-muted-foreground flex-shrink-0" datetime={pubDate.toISOString()}>
            {formattedDate}
          </time>
        </div>
        <p class="mt-2 text-muted-foreground text-sm line-clamp-2">{description}</p>
      </div>
    </div>
  </article>
</a>

---
import type { Locale } from '../lib/i18n';
import { getTranslations } from '../lib/i18n';
import { getAlternateUrl } from '../lib/locale';

const locale = (Astro.currentLocale ?? 'en') as Locale;
const t = getTranslations(locale);
const href = getAlternateUrl(Astro.url.pathname, locale);
---

<a href={href} class="text-muted-foreground hover:text-foreground transition-colors text-sm font-medium">
  {t.lang.switchLabel}
</a>

---
import BaseLayout from '../../layouts/BaseLayout.astro';
import PostCard from '../../components/PostCard.astro';
import { getCollection } from 'astro:content';
import type { Locale } from '../../lib/i18n';
import { getTranslations } from '../../lib/i18n';
import { getLocaleFromPostId } from '../../lib/locale';

const locale = (Astro.currentLocale ?? 'ru') as Locale;
const t = getTranslations(locale);

const posts = (await getCollection('blog'))
  .filter((post) => !post.data.draft && getLocaleFromPostId(post.id) === locale)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<BaseLayout title="gulivan.dev" ogType="website">
  <section class="mb-12">
    <h1 class="text-4xl font-bold tracking-tight mb-3">{t.home.greeting}</h1>
    <p class="text-lg text-muted-foreground">
      {t.home.tagline}
    </p>
  </section>

  <section>
    <h2 class="text-2xl font-semibold tracking-tight mb-4">{t.home.postsHeading}</h2>
    {posts.length === 0 ? (
      <p class="text-muted-foreground">{t.home.noPosts}</p>
    ) : (
      <div class="flex flex-col gap-4">
        {posts.map((post) => (
          <PostCard
            title={post.data.title}
            pubDate={post.data.pubDate}
            description={post.data.description}
            tags={post.data.tags}
            image={post.data.image}
            slug={post.id}
            locale={locale}
          />
        ))}
      </div>
    )}
  </section>
</BaseLayout>
